{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Scatter Plot of Ladder Score, Life Expectancy, and GDP per Capita",
  "data": {
    "url": "data/OriginalHappinessExplained2022.csv"
  },
  "params": [
    {
      "name": "yearFilter",
      "bind": {
        "input": "range",
        "min": 2006,
        "max": 2020,
        "step": 1,
        "name": "Select Year:"
      },
      "value": 2020
    },
    {
      "name": "regionFilter",
      "bind": {
        "input": "select",
        "options": ["Southeast Asia", "Western Europe", "North America and ANZ", "Middle East and North Africa", "Latin America and Caribbean", "Central and Eastern Europe", "East Asia"],
        "name": "Select Region : "
      },
      "value": "Southeast Asia" 
    }
  ],
  "mark": {
    "type": "circle",
    "opacity": 0.6
  },
  "transform": [
    {
      "filter": {
        "and": [
          "(datum.year == yearFilter)",
          "(datum.Region == regionFilter || datum.Region == 'Southeast Asia')"
        ]
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "Healthy_life_expectancy_at_birth",
      "type": "quantitative",
      "title": "Life Expectancy",
      "scale": {"domain": [0, 75]} 
    },
    "y": {
      "field": "Life_Ladder",
      "type": "quantitative",
      "title": "Ladder Score",
      "scale": {"domain": [0, 9]} 
    },
    "size": {
      "field": "Log_GDP_per_capita",
      "type": "quantitative",
      "title": "GDP per Capita"
    },
    "color": {
      

      "field": "Region",
      "type": "nominal",
      "title": "Region"
    },
    "tooltip": [
      {
        "field": "Country_name",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "Healthy_life_expectancy_at_birth",
        "type": "quantitative",
        "title": "Life Expectancy"
      },
      {
        "field": "Life_Ladder",
        "type": "quantitative",
        "title": "Ladder Score"
      },
      {
        "field": "Log_GDP_per_capita",
        "type": "quantitative",
        "title": "GDP per Capita"
      },
      {
        "field": "Region",
        "type": "nominal",
        "title": "Region"
      }
    ]
  },
  "width": 600,
  "height": 400
}
